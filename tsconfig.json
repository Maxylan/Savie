{
	"compilerOptions": {
		"target": "ES2022",
		"module": "nodenext",
        "esModuleInterop": true,
		"isolatedModules": true,
		"forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
		"strict": true,
		"outDir": "./dist",
		"rootDir": "./src"
	},
	"include": [
        "src", 
        "src/declaration.d.ts", 
        "src/index.css", 
        "src/icons",
        "src/popups"
    ],
	"exclude": [
        "node_modules"
    ]
}
